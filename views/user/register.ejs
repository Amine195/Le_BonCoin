    <!-- Mdb Validation -->
    <script>
        (function () {
        window.addEventListener("load", () => {
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            const forms = document.getElementsByClassName("needs-validation");
            // Loop over them and prevent submission
            const validation = Array.prototype.filter.call(forms, (form) => {
            form.addEventListener("submit", (event) => {
                if (form.checkValidity() === false) {
                event.preventDefault();
                event.stopPropagation();
                }
                form.classList.add("was-validated");
            }, false);
            });
        }, false);
        }());
    </script>

    <!-- Complexify script -->
    <script  type="text/javascript" src="/js/complexify/complexify.banlist.js"></script>
    <script  type="text/javascript" src="/js/complexify/complexify.js"></script>

    <!-- Bring Complexify -->
    <script>
        $(document).ready(function() {
            $('#password').complexify({}, function(valid, complex) {
                var progress = $('#progress-bar');
                progress.toggleClass("bg-success", valid);
                progress.toggleClass("bg-danger", !valid);
                progress.css({'width': complex+'%'});
            });
        });
    </script>

    <!-- Pidie Javascript -->
    <script type="text/javascript" src="/js/Password.js"></script>

    <!-- Bring Pidie -->
    <script>
        var pidie = new Pidie();
        pidie.passwordValidation();
        pidie.togglePassword('#password-show');
    </script>

