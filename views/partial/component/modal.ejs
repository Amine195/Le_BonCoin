<!-- Modal Register -->
<div class="modal fade" id="register" tabindex="-1" role="dialog" aria-labelledby="ModalRegister" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-body p-0">
                
                <!-- card hoverable Register -->
                <div class="card">

                    <h5 class="card-header white-text text-center default-color-dark font-weight-bold text-uppercase py-4"><i class="fas fa-user-plus"></i> &nbsp;&nbsp; Register
                        <button type="button" class="close white-text" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </h5>
            
                    <!-- Card body -->
                    <div class="card-body">

                        <!-- Card shadow -->
                        <div class="z-depth-5">

                            <!-- Card -->
                            <div class="card">

                                <!-- Card content -->
                                <div class="card-body">

                                    <!-- Material input -->
                                    <form class="needs-validation" action="/user/login" method="post"  novalidate>

                                        <!-- Username -->
                                        <div class="md-form">
                                            <i class="fas fa-user prefix"></i>
                                            <label for="username">Nom Utilisateur</label>
                                            <input type="text" name="username" class="form-control" pattern=".{8,}" required>
                                            <small class="form-text text-muted">Doit contenir au moins 8 caractères .</small>
                                            <div class="invalid-feedback animated fadeInRight p-0" style="margin-left: 40px;">
                                                Champs obligatoires !
                                            </div>
                                        </div>
                
                                        <!-- Email -->
                                        <div class="md-form">
                                            <i class="fas fa-envelope prefix"></i>
                                            <label for="email">Email</label>
                                            <input type="email" name="email" class="form-control" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" required>
                                            <div class="invalid-feedback animated fadeInRight p-0" style="margin-left: 40px;">
                                                Champs obligatoires !
                                            </div>
                                        </div>

                                        <!-- Password -->
                                        <div class="md-form">
                                            <i class="fas fa-lock prefix"></i>
                                            <label for="password">Mot de Passe</label>
                                            <input type="password" name="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" class="form-control" required>
                                            <small class="form-text text-muted">Doit contenir au moins un chiffre, une lettre majuscule et minuscule et au moins 8 caractères .</small>
                                            <div class="invalid-feedback animated fadeInRight" style="margin-left: 40px;">
                                                Champs obligatoires !
                                            </div>
                                        </div>

                                        <!-- Password Confirmation -->
                                        <div class="md-form mb-3">
                                            <i class="fas fa-lock prefix"></i>
                                            <label for="confirm_password">Confirmation Mot de Passe</label>
                                            <input type="password" name="confirm_password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" class="form-control" required>
                                            <div class="invalid-feedback animated fadeInRight p-0" style="margin-left: 40px; font-size: 13px;">
                                                Champs obligatoires !
                                            </div>
                                        </div>

                                        <!-- Button -->
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-outline-success waves-effect pl-5 pr-5"><i class="fas fa-user-check"></i>&nbsp; Register</button>
                                        </div>

                                    </form> 
                                    <!-- Material input -->   

                                </div>
                                <!-- Card content -->

                            </div>
                            <!-- Card -->

                        </div>
                        <!-- Card shadow -->    

                    </div>
                    <!-- Card body -->
    
                </div>
                <!-- card hoverable Register --> 

            </div>
        </div>
    </div>
</div>

